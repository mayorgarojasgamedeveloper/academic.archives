<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta http-equiv="X-UA-Compatible" content="ie=edge">
  <link rel="shortcut icon" href="./images/icon.png" type="image/x-icon" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
  <link rel="stylesheet" href="../stylesheets/style.css">
  <title>Ajustes</title>
</head>
<body>

  <% include partials/nav %>

  <section class="jumbotron">
    <h1 class="display-4 text-center">Ajustes</h1>
    <h1 class="display-6 text-center"><%- usuario.usuario %></h1>
  </section>

  <section class="container">
    <form class="" action="index.html" method="post">
      <hr class="my-4">
      <h1 class="display-4 text-center">Datos Personales</h1>
      <hr class="my-4">
      <div class="row">
        <div class="col form-group">
          <label for="nombre">Nombre:</label>
          <input type="text" class="form-control" id="nombre" value="<%- usuario.nombre %>">
        </div>
        <div class="col form-group">
          <label for="apellido">Apellido:</label>
          <input type="text" class="form-control" id="apellido" value="<%- usuario.apellido %>">
        </div>
      </div>
      <hr class="my-4">
      <div class="row">
        <div class="col form-group">
          <label for="correo">Correo:</label>
          <input type="text" class="form-control" id="correo" value="<%- usuario.correo %>">
        </div>
        <div class="col form-group">

        </div>
      </div>
      <hr class="my-4">
      <div class="row">
        <div class="col form-group">
          <label for="mensaje">Curriculum</label>
          <textarea class="form-control" id="mensaje" rows="5">
            <%- usuario.curriculum %>
          </textarea>
        </div>
      </div>
      <hr class="my-4">
      <button type="submit" class="btn btn-primary">Guardar</button>
    </form>

    <form class="" action="index.html" method="post">
      <hr class="my-4">
      <h1 class="display-4 text-center">Foto de perfil</h1>
      <hr class="my-4">
      <div class="row">
        <div class="col form-group">
          <label for="foto_archivo">Foto:</label>
          <input type="file" class="form-control" id="foto_archivo" accept="image/x-png">
        </div>
        <div class="col">

        </div>
      </div>
      <button type="submit" class="btn btn-primary">Cambiar</button>
    </form>

    <form class="" action="index.html" method="post">
      <hr class="my-4">
      <h1 class="display-4 text-center">Contraseña</h1>
      <hr class="my-4">
      <div class="row">
        <div class="col form-group">
          <label for="contrasena">Nueva Contraseña:</label>
          <input type="text" class="form-control" id="contrasena" placeholder="*******">
        </div>
        <div class="col form-group">
          <label for="contrasena-rep">Repite Contraseña:</label>
          <input type="text" class="form-control" id="contrasena-rep" placeholder="*******">
        </div>
      </div>
      <hr class="my-4">
      <button type="submit" class="btn btn-primary">Cambiar</button>
    </form>


  </section>

  <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
  <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
</body>
</html>
